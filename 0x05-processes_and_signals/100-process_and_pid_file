#!/usr/bin/env bash
# This script creates a PID file

# Create a PID file
echo $$ > /var/run/myscript.pid

# Define what to do upon receiving SIGTERM and SIGINT signals
trap 'echo "I hate the kill command"; exit' SIGINT
trap 'echo "Y U no love me?!"; exit' SIGTERM
trap 'rm /var/run/myscript.pid; exit' SIGQUIT

# Display a message indefinitely
while true; do
    echo "To infinity and beyond"
    sleep 2
done
